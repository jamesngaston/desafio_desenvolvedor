@model IEnumerable<DesafioPontoSistemas.Models.User>

@{
    ViewData["Title"] = "Lista de usuários";
}

    <h1>Lista de usuários</h1>

<p>
    <a asp-action="Create">Adicionar usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Idade
            </th>
            <th>
                E-mail
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
